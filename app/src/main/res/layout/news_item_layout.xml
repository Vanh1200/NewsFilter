<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="115dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_background"
        android:background="@color/colorRowBG">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_swipe_delete"
            android:layout_toLeftOf="@id/iv_swipe_delete"
            android:layout_marginRight="10dp"
            android:text="@string/act_delete_upcase"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_swipe_delete"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_sweep_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_thumbnail"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/newspaper"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pub_date"
            android:layout_toRightOf="@id/iv_thumbnail"
            android:layout_marginLeft="15dp"
            android:text="Aug 18 2018"
            android:textColor="@color/colorPubDate"
            android:textSize="12sp"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_news"
            android:lines="1"
            android:maxLines="1"
            android:text="This is a news title"
            android:textSize="19sp"
            android:layout_below="@id/tv_pub_date"
            android:layout_alignLeft="@id/tv_pub_date"
            android:textColor="@color/colorItemName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description"
            android:layout_below="@id/tv_title_news"
            android:layout_alignLeft="@id/tv_title_news"
            android:text="This is a description asdfadsf adf fdaf Ã  adsfasdfasdfasdfasdfasdf"
            android:textSize="14sp"
            android:textColor="@color/colorDescription"
            android:lines="2"
            android:maxLines="1"/>

        <LinearLayout
            android:id="@+id/ln_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_alignLeft="@id/tv_description">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"/>
            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_2"
                android:layout_marginLeft="25dp"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"/>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/share_2"
                android:paddingTop="7dp"
                android:paddingBottom="6dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_publisher"
            android:paddingRight="5dp"
            android:gravity="center_vertical|right"
            android:layout_alignTop="@id/ln_icon"
            android:layout_alignBottom="@id/ln_icon"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/ln_icon"
            android:textColor="#09596d"
            android:textSize="12sp"
            android:text="publisher" />

    </RelativeLayout>

</FrameLayout>